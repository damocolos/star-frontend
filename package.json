    "pinia": "^3.0.4",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.4.0",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "vue-sonner": "^2.0.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tsconfig/node20": "^20.1.8",
    "@tsconfig/node24": "^24.0.3",
