    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-vue": "~10.6.2",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.38.0",
    "postcss": "^8.4.49",
    "prettier": "3.7.4",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "vite": "beta",
